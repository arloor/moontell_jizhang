/* pages/about/about.wxss */

.square_image {
  height: 550rpx;
  width: 550rpx;
}


.about_container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx 0 0rpx 0rpx;
  box-sizing: border-box;
  
}

.info{
background-color: #eeeeee;
}

.line {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 10rpx 30rpx;
  margin: 5rpx;
  border-bottom: 2rpx solid black;
}

.author_card {
  margin: 10rpx;
  border: 3rpx solid #ccc;
  border-radius:10rpx;
}
